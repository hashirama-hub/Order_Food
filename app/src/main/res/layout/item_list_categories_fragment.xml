<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:background="@color/color_main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/img_avatar_category"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chocolateboxes" />
     <TextView
         android:id="@+id/tv_name_category"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Chocolate boxes"
         android:layout_margin="7dp"
         android:textSize="15dp"
         android:textColor="@color/black"
         android:textStyle="bold"
         />
        <TextView
            android:id="@+id/tv_desc_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share a homestyle cookie gift of delicious goodies made using only the finest ingredients. Whether youâ€™re sending a cookie basket or box, any cookie delivery is a delightful surprise"

            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>